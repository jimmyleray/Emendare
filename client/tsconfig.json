{
  "compilerOptions": {
    "lib": [
      "dom",
      "es7"
    ],
    "target": "es6",
    "allowJs": true,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noImplicitAny": false,
    "noEmit": true,
    "types": [
      "node",
      "jest"
    ],
    "jsx": "preserve"
  },
  "include": [
    "src/**/*"
  ]
}
