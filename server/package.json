{
  "name": "emendare-server",
  "version": "0.0.0",
  "main": "index.js",
  "engines": {
    "node": "10.15.3"
  },
  "license": "GPL-3.0",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc -w",
    "start": "node build/server/src/index.js",
    "dev": "nodemon build/server/src/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "format": "prettier --write src/**/*.{js,ts,json,md}",
    "format:ci": "prettier --list-different --write src/**/*.{js,ts,json,md}",
    "doc": "typedoc --out ./docs --name Emendare --readme ../README.md --target ES6 --downlevelIteration ./src"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts}": [
      "npm run format",
      "npm run lint",
      "git add"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/index.ts"
    ]
  },
  "dependencies": {
    "bcrypt": "^3.0.6",
    "chalk": "^2.4.2",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "diff": "^4.0.1",
    "express": "^4.17.0",
    "is-match": "^1.0.0",
    "lodash": "^4.17.11",
    "mjml": "^4.3.1",
    "mockingoose": "^2.13.0",
    "mongoose": "^5.5.7",
    "njwt": "^1.0.0",
    "node-fetch": "^2.5.0",
    "nodemailer": "^6.1.1",
    "socket.io": "^2.2.0"
  },
  "devDependencies": {
    "@types/bcrypt": "3.0.0",
    "@types/chalk": "^2.2.0",
    "@types/cors": "^2.8.5",
    "@types/diff": "4.0.2",
    "@types/express": "4.16.1",
    "@types/jest": "24.0.13",
    "@types/lodash": "4.14.131",
    "@types/mjml": "^4.0.2",
    "@types/mockingoose": "^2.11.0",
    "@types/mongoose": "5.5.1",
    "@types/node": "12.0.2",
    "@types/node-fetch": "2.3.4",
    "@types/nodemailer": "6.1.0",
    "@types/socket.io": "2.1.2",
    "husky": "2.3.0",
    "jest": "24.1.0",
    "lint-staged": "8.1.7",
    "nodemon": "1.19.0",
    "prettier": "1.17.1",
    "ts-jest": "24.0.2",
    "tslint": "5.12.1",
    "typedoc": "0.14.2",
    "typescript": "3.3.3"
  }
}
